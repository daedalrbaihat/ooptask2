
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employees</title>
    <link href="~/css/Style/Employees.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <form action="Index1" method="post">
        <div class="box">
            <div class="title">
                <h2>Social Security Institution مؤسسة الضمان الاجتماعي</h2>
            </div>



            <div>
                <div class="info">
                    <label> First Name</label>
                    <div>
                        <input type="text" name="fname">
                    </div>
                </div>

                <div class="info">
                    <label> last Name</label>
                    <div>
                        <input type="text" name="lname">
                    </div>
                </div>

                <div class="info">
                    <div class="job">
                        <label> You Are: </label>
                        <select name="select">
                            <option value="Techer">Teacher</option>
                            <option value="Engineer">Engineer</option>
                            <option value="">Doctor</option>
                        </select>
                    </div>

                    <div class="gender">
                        <div class="gg">
                            <label>Gender </label>
                        </div>
                        <div class="gg">
                            <input type="radio" name="radio" value="MR">
                            <label>Male</label>
                        </div>
                        <div class="gg">
                            <input type="radio" name="radio" value="MS">
                            <label>Female</label>
                        </div>
                    </div>

                </div>

                <div class="info" style="clear: left;">
                    <label>Your Salary : </label>
                    <div>
                        <input type="text" name="ysalary">
                    </div>
                </div>

                <div class="info">
                    <label>Do you have any deduction : </label>
                    <div>
                        <input type="text" name="ded">
                    </div>
                </div>


                <div class="info">
                    <label>Do you have any Insentive : </label>
                    <div>
                        <input type="text" name="ins">
                    </div>
                </div>


                <div class="info">
                    <input type="submit" value="save">
                </div>

                <div class="msg">
                    <label>@ViewData["message"]</label>
                </div>



            </div>



        </div>
    </form>
</body>
</html>

